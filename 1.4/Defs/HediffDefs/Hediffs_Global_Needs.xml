<?xml version="1.0" encoding="utf-8"?>

<Defs>
  <HediffDef>
    <defName>SpaceHypoxia</defName>
    <defaultLabelColor>(0.8, 0.8, 0.35)</defaultLabelColor>
    <hediffClass>HediffWithComps</hediffClass>
    <label>hypoxia</label>
    <description>Organ failure due to lack of oxygen. Quickly fatal if no EVA suit or life-supported room can be found.</description>
    <lethalSeverity>1</lethalSeverity>
    <makesSickThought>true</makesSickThought>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>initial</label>
      </li>
      <li>
        <label>minor</label>
        <minSeverity>0.1</minSeverity>
        <vomitMtbDays>2</vomitMtbDays>
        <painOffset>0</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.10</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.2</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>serious</label>
        <minSeverity>0.25</minSeverity>
        <vomitMtbDays>1</vomitMtbDays>
        <painOffset>0.05</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.7</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.6</minSeverity>
        <vomitMtbDays>0.75</vomitMtbDays>
        <painOffset>0.25</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.7</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>-0.7</setMax>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.7</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>extreme</label>
        <minSeverity>0.9</minSeverity>
        <lifeThreatening>true</lifeThreatening>
        <vomitMtbDays>0.25</vomitMtbDays>
        <painOffset>0.6</painOffset>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.9</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>-0.9</setMax>
          </li>
          <li>
            <capacity>Breathing</capacity>
            <offset>-0.9</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
</Defs>