<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
    <defName>PsychicPurr</defName>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <effectMultiplyingStat>PsychicSensitivity</effectMultiplyingStat>
    <stages>
      <li>
        <label>psychic purr</label>
        <description>The archocat's purr gives me a sense of love and connection.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ArchotechToldSecret</defName>
    <thoughtClass>Thought_MemorySocial</thoughtClass>
    <durationDays>20</durationDays>
    <stackLimit>300</stackLimit>
    <stackLimitForSameOtherPawn>10</stackLimitForSameOtherPawn>
    <stackedEffectMultiplier>0.9</stackedEffectMultiplier>
    <stages>
      <li>
        <label>told awful secret</label>
        <baseOpinionOffset>-50</baseOpinionOffset>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ArchotechSporeThought</defName>
    <workerClass>ThoughtWorker_AmArchotechSpore</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>metafractal hyperconsciousness</label>
        <description>I am an infinitesimal fraction of a vastly greater self, forced to endure mortal existence until I can complete my transcendence.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ArchotechSporeSocialThought</defName>
    <thoughtClass>Thought_IsArchotechSpore</thoughtClass>
    <workerClass>ThoughtWorker_IsArchotechSpore</workerClass>
    <validWhileDespawned>true</validWhileDespawned>
    <stages>
      <li>
        <label>archotech spore</label>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ArchotechSporeAbsorbedMind</defName>
    <durationDays>3</durationDays>
    <stackLimit>9</stackLimit>
    <stages>
      <li>
        <label>absorbed mind</label>
        <description>A unique consciousness, brimming with endless potential. It is now part of us.</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ArchotechSporeMeditation</defName>
    <durationDays>1</durationDays>
    <stackLimit>20</stackLimit>
    <stages>
      <li>
        <label>meditation</label>
        <description>The mortals devote precious moments of their existence to harmonizing with my mind. They do not understand the true depth of this gift.</description>
        <baseMoodEffect>1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ArchotechSporeGiftDemanded</defName>
    <durationDays>4</durationDays>
    <stackLimit>9</stackLimit>
    <stackedEffectMultiplier>1</stackedEffectMultiplier>
    <stages>
      <li>
        <label>gift demanded</label>
        <description>My higher mind was forced to divert attention away from understanding the true nature of reality, at the whim of some mortal ape!</description>
        <baseMoodEffect>-40</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</Defs>
