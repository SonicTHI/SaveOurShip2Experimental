<Defs>
	<ThingDef ParentName="BuildingBase">
		<defName>PersonalShuttle</defName>
		<label>personal shuttle</label>
		<thingClass>Building</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<description>A small, reusable shuttlecraft. Can be used for transport, surprise attacks, or reinforcing battles.</description>
		<graphicData>
			<texPath>Things/Shuttle/shuttle_personal</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<size>(1,1)</size>
		<rotatable>false</rotatable>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>false</castEdgeShadows>
		<fillPercent>0.5</fillPercent>
		<designationCategory>Ship</designationCategory>
		<building>
			<hasFuelingPort>true</hasFuelingPort>
		</building>
		<statBases>
			<MaxHitPoints>500</MaxHitPoints>
			<WorkToBuild>8000</WorkToBuild>
			<Flammability>0</Flammability>
			<Mass>300</Mass>
		</statBases>
		<costList>
			<Plasteel>40</Plasteel>
			<Steel>160</Steel>
			<ComponentIndustrial>12</ComponentIndustrial>
		</costList>
		<comps>
			<li Class="CompProperties_Transporter">
				<massCapacity>150</massCapacity>
				<restEffectiveness>0.8</restEffectiveness>
				<canChangeAssignedThingsAfterStarting>true</canChangeAssignedThingsAfterStarting>
			</li>
			<li Class="SaveOurShip2.CompProps_ShuttleLaunchable">
				<fuelPerTile>1</fuelPerTile>
				<skyfaller>PersonalShuttleSkyfaller</skyfaller>
			</li>
			<li Class="CompProperties_Refuelable">
				<fuelCapacity>250.0</fuelCapacity>
				<targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
				<initialConfigurableTargetFuelLevel>250</initialConfigurableTargetFuelLevel>
				<fuelFilter>
					<thingDefs>
						<li>Chemfuel</li>
					</thingDefs>
				</fuelFilter>
				<consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
				<autoRefuelPercent>1</autoRefuelPercent>
				<showFuelGizmo>true</showFuelGizmo>
				<drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
			</li>
			<li Class="SaveOurShip2.CompProps_BecomePawn">
				<pawnDef>ShuttlePersonalHover</pawnDef>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_ContentsTransporter</li>
		</inspectorTabs>
		<placeWorkers>
    </placeWorkers>
		<researchPrerequisites>
			<li>ShuttlePersonal</li>
		</researchPrerequisites>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsFurniture</li>
		</thingCategories>
		<uiIconScale>0.65</uiIconScale>
	</ThingDef>
